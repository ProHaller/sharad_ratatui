{
  "name": "update_contacts",
  "description": "Update contacts of a Shadowrun character",
  "strict": true,
  "parameters": {
    "type": "object",
    "required": [
      "character_name",
      "operation",
      "contacts"
    ],
    "properties": {
      "character_name": {
        "type": "string",
        "description": "The name of the character to update"
      },
      "operation": {
        "type": "string",
        "enum": [
          "Add",
          "Remove",
          "Modify"
        ],
        "description": "The type of operation to perform on the contacts"
      },
      "contacts": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "name",
            "description",
            "loyalty",
            "connection"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "loyalty": {
              "type": "integer",
              "enum": [
                1,
                2,
                3,
                4,
                5,
                6
              ],
              "description": "Loyalty rating, must be between 1 and 6"
            },
            "connection": {
              "type": "integer",
              "enum": [
                1,
                2,
                3,
                4,
                5,
                6
              ],
              "description": "Connection rating, must be between 1 and 6"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
